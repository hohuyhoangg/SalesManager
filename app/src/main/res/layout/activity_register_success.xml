<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/boy_person" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whoo Whoo"
        android:layout_gravity="center_horizontal"
        android:textColor="#02D3ED"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have registered an account successfully!"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:textColor="#464849"
        android:textSize="14sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please verify your email to activate your account"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:textColor="#464849"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_otp_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="OTP - Verify"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="9"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_login_register"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:background="@drawable/mybutton"
        app:backgroundTint="#00BCD4"/>

</LinearLayout>