<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:padding="4dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/card_view_cart_id">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:background="#FFFFFF"
            android:id="@+id/product_cart_img_id"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đừng bỏ lỡ ưu đãi!!!"
                    android:paddingLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="#686767"
                    android:id="@+id/product_cart_title_id"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:checked="true"
                    android:layout_marginEnd="-6dp" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="50000 đ"
                android:layout_marginTop="4dp"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textColor="#F11906"
                android:id="@+id/product_cart_price_id"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/product_cart_quantity_sub"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="20sp"
                    android:background="#D8D8D1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:id="@+id/product_cart_quantity_id"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="20sp"
                    android:background="#EFEFEC"
                    android:layout_width="35dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:id="@+id/product_cart_quantity_add"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="20sp"
                    android:background="#D8D8D1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
                <TextView
                    android:id="@+id/product_cart_cancel_item"
                    android:textColor="#001AFF"
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:text="Mua sau"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>